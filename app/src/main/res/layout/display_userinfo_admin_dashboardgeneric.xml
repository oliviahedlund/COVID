<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_dash_generic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    >


    <Button
        android:id="@+id/BackButton"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Firstname_userinfo"
        android:layout_gravity="bottom"
        android:id="@+id/Firstname"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Lastname_userinfo"
        android:layout_gravity="bottom"
        android:id="@+id/Lastname"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Bdate_userinfo"
        android:layout_gravity="bottom"
        android:id="@+id/Birthdate"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FirstDose_userinfo"
        android:layout_gravity="bottom"
        android:id="@+id/NrOfDoses"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/QuestionnaireListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        />

</LinearLayout>